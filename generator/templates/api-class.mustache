import '../helpers/http.dart';
{{#imports}}
import '../{{type}}/{{filename}}.dart';
{{/imports}}
class {{className}}{
    {{#methods}}
    {{#description}}
    /// {{.}}
    {{/description}}
    static Future<{{returnType}}> {{methodName}} (
        HttpClient client,
        {{#parameters}}
        {{{typeName}}} {{name}},
        {{/parameters}}
        {{#requestBody}}
        {{{typeName}}} body
        {{/requestBody}}
    ) async {
        final Map<String, dynamic> params = Map<String, dynamic>();
        {{#queryParameters}}
        params['{{name}}'] = {{name}};
        {{/queryParameters}}
        final HttpClientConfig config = HttpClientConfig('{{method}}', '{{{url}}}', params);
        {{#requestBody}}
        {{{bodySerializeFunction}}}
        {{/requestBody}}
        config.bodyContentType = {{{requestBodyContentType}}};
        final HttpResponse response = await client.request(config);
        if(response.statusCode == 200) {
            return {{returnType}}.fromJson(response.mappedBody);
        }
        throw Exception(response.mappedBody);
    }
    {{/methods}}
